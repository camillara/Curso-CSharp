using System;
class Uri1080 {
  static void Main() {
    int numero, posicao=0, maior=0;
    for(int i=1; i<=100; i++){
        do{
            Console.Write(i+"° número: ");
            numero = int.Parse(Console.ReadLine());
        }while(numero<0);
        if(numero>maior){
            maior = numero;
            posicao = i;
        }
    }
    Console.WriteLine(maior);
    Console.WriteLine(posicao);
  }
}
