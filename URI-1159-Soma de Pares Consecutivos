using System;
class Uri1159 {
  static void Main() {
    Console.Write("Informe um valor inteiro: ");
    int x = int.Parse(Console.ReadLine());
    while(x!=0){
        if(x%2==0){
            x = x+(x+2)+(x+4)+(x+6)+(x+8);
        }
        else{
            x = (x+1)+(x+3)+(x+5)+(x+7)+(x+9);
        }
        Console.WriteLine(x);
        Console.Write("Informe um valor inteiro: ");
        x = int.Parse(Console.ReadLine());
    }
  }
}
